{
  "routes": [
    {
      "route": "/check",
      "handlers": { "get": "checkHandler" },
      "permissions": { "get": null },
      "meta": {
        "get": {
          "summary": "Checks current authentication status",
          "description": "A HTTP status code of 200 will be returned if request could be authenticated successfully, otherwise an error will be returned.",
          "responses": {
            "200": {
              "description": "User authentication data",
              "content": {
                "application/json": {
                  "schema": {
                    "$schema": "https://json-schema.org/draft/2020-12/schema",
                    "type": "object",
                    "properties": {
                      "scopes": { "type": "array", "items": { "type": "string" } },
                      "isSuper": { "type": "boolean" },
                      "user": {
                        "type": "object",
                        "properties": {
                          "_id": { "type": "string" },
                          "email": { "type": "string" },
                          "firstName": { "type": "string" },
                          "lastName": { "type": "string" },
                          "roles": { "type": "array", "items": { "type": "string" } }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    {
      "route": "/disavow",
      "handlers": { "post": "disavowHandler" },
      "permissions": { "post": ["disavow:auth"] },
      "meta": {
        "post": {
          "summary": "De-authenticates the current user from the API",
          "responses": { "204": {} }
        }
      }
    },
    {
      "route": "/generatetoken",
      "handlers": { "post": "generateTokenHandler" },
      "permissions": { "post": ["generatetoken:auth"] },
      "meta": {
        "post": {
          "summary": "Creates a new authentication token",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "$schema": "https://json-schema.org/draft/2020-12/schema",
                  "type": "object",
                  "properties": { "lifespan": { "type": "string" } }
                }
              }
            }
          },
          "responses": {
            "200": {
              "content": {
                "application/json": {
                  "schema": { "properties": { "token": { "type": "string" } } }
                }
              }
            }
          }
        }
      }
    },
    {
      "route": "/tokens",
      "handlers": { "get": "retrieveTokensHandler" },
      "permissions": { "get": ["read:me"] },
      "meta": {
        "get": {
          "summary": "Retrieve all authentication tokens for current user",
          "responses": {
            "200": {
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "properties": {
                        "userId": { "type": "string" },
                        "createdAt": { "type": "string" },
                        "usedAt": { "type": "string" },
                        "authType": { "type": "string" }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  ]
}
