{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "An authorisation token",
  "type": "object",
  "properties": {
    "signature": {
      "description": "The JWT token signature for verification purposes",
      "type": "string"
    },
    "createdAt": {
      "description": "Token creation timestamp",
      "type": "string",
      "format": "date-time"
    }
  },
  "required": ["token", "createdAt"]
}
