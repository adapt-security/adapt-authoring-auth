{
  "$anchor": "authrouteitem",
  "$merge": {
    "source": { "$ref": "routeitem" },
    "with": {
      "properties": {
        "unsecured": {
          "type": "boolean",
          "description": "Route does not require authentication",
          "default": false
        },
        "permissions": {
          "type": "object",
          "description": "Keys are HTTP methods, values are arrays of permission scope strings",
          "propertyNames": { "enum": ["get", "post", "put", "patch", "delete"] },
          "additionalProperties": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    }
  }
}
