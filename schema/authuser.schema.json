{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$anchor": "authuser",
  "description": "Extra user properties related to auth",
  "$merge": {
    "with": {
      "properties": {
        "authTypes": {
          "description": "Types of authentication used with this user",
          "type": "array",
          "items": { "type": "string" },
          "default": []
        }
      }
    }
  }
}
